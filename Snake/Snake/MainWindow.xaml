<Window x:Class="Snake.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Snake"
        mc:Ignorable="d"
        Title="Snake" Height="450" Width="800" MinWidth="500" MinHeight="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition  Height="1*"/>

        </Grid.RowDefinitions>
        <Canvas x:Name="cnvCanvas" Grid.Row="0" MinWidth="500" MinHeight="500" VerticalAlignment="Center" HorizontalAlignment="Center" Background="Beige" />
        <Button x:Name="btnIniciaJoc" Grid.Row="1" Click="BtnIniciaJoc_Click">Inicia Joc</Button>
    </Grid>
</Window>
